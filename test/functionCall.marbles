

var hyaku num 100                 /variable with inline numeric literal

var nihyaku num                   /variable, evaluated at entry
	mul hyaku 2                     /body

fn tenPerFrame num                /nullary function
	mul currentFrame 10             /body

fn addmul num                     /binary function
	input  num                      /first parameter
	factor num                      /second parameter
	mul factor (add factor input)   /body


# enter                           /frameform

state result num                  /state
	addmul                          /body
		tenPerFrame
		div nihyaku hyaku

